void handleListImages(AsyncWebServerRequest *request) {
    String filenames = "[";

    File root = SD_MMC.open("/");
    if (root) {
        // Create an array to store filenames
        String filenamesArray[10];
        int index = 0;
        
        // Iterate through files and store photo filenames
        File file = root.openNextFile();
        while (file) {
            String fileName = file.name();
            if (fileName.endsWith(".jpg") || fileName.endsWith(".jpeg")) {
                filenamesArray[index] = "\"" + fileName + "\"";
                index++;
                if (index >= 10) {
                    break; // Stop after getting 10 filenames
                }
            }
            file = root.openNextFile();
        }
        filenames += joinStrings(filenamesArray, ","); // Join filenames with commas
    }
    filenames += "]";

    request->send(200, "application/json", filenames);
}


<!-- Add this script section to your HTML -->
<script>
    function updatePhotosList() {
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function() {
            if (this.readyState == 4 && this.status == 200) {
                var filenames = JSON.parse(this.responseText);
                var photosList = document.getElementById("photosList");
                photosList.innerHTML = ""; // Clear the previous list
                for (var i = 0; i < filenames.length; i++) {
                    var listItem = document.createElement("li");
                    var link = document.createElement("a");
                    link.href = "/view?name=" + filenames[i];
                    link.textContent = filenames[i];
                    listItem.appendChild(link);
                    photosList.appendChild(listItem);
                }
            }
        };
        xhttp.open("GET", "/photos", true);
        xhttp.send();
    }
    
    // Update the photos list initially and then every 5 seconds
    updatePhotosList();
    setInterval(updatePhotosList, 5000);
</script>

<!-- Add this to your HTML where you want to display the photos list -->
<ul id="photosList"></ul>
